{
    "name": "trntv/yii2-glide",
    "description": "Yii2 Glide Extension",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","glide","thumbnail"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Eugene Terentev",
            "email": "eugene@terentev.net"
        }
    ],
    "require": {
        "php" : ">=5.5.9",
        "yiisoft/yii2": "^2.0.0",
        "league/glide": "^1.1",
        "league/uri": "^5.0",
        "symfony/http-foundation": "^3.0"
    },
    "require-dev": {
      "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "trntv\\glide\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "trntv\\glide_tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
